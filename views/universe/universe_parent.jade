    body#body
        header(style='height:50px;position:relative;left:0%;width:100%;top:0%;background-color: #000;z-index:1;')
            nav.navbar.navbar-default( role='navigation' , style='border-top:0px;height:100%')
                ul.nav.navbar-nav(style='padding:10px 5px 0px 17px')
                    li
                        //h3.fit.bold
                        a.fit.c-darkblue.hvr-underline-reveal(href='/universe', style='padding-top:5px;font-size:25px;font-weight:700;') UNIVERSE
                ul.nav.navbar-nav.right(style='padding:0px 20px 0px 20px')

                    li
                        a.dropdown-toggle(data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" style='font-size:15px;margin-right:15px').hvr-underline-reveal.
                            Samples
                        ul.dropdown-menu.forAnimate(role='menu')
                            li.item
                                h5(style='padding-left:10px') Web
                            li.item
                                a(href="/projects/cosmovis/", style='font-size:14px') Credos
                            li.item
                                a(href="/projects/cosmovis/", style='font-size:14px') CRC
                            li.item
                                a(href='#', style='font-size:14px') Pedigree
                            li.divider(role='separator')
                            li.item
                                h5(style='padding-left:10px') Engine
                    li
                        a(href='/universe/project' style='font-size:15px;margin-right:15px').hvr-underline-reveal.
                            Registered Data

                    li
                        a(href='/universe/upload', style='font-size:15px;margin-right:15px').hvr-underline-reveal.
                            Data Upload
                    form.navbar-form.navbar-left(role='search')
                        .form-group
                            input.form-control.no-right-border(type='text', placeholder='Search')
                        button.btn.btn-warning(type='submit') &nbsp;
                            span.pull-right.hidden-xs.showopacity.glyphicon.glyphicon-search(style='font-size:16px; margin-right:5px; margin-top:2px')
                    if(user === undefined)
                        li
                            div.btn.btn-group
                                a.btn.btn-success.hvr-underline-reveal(href='/universe/login', style='margin-top:1px') SIGN IN
                    if(user !== undefined)
                        li
                            div.btn.btn-group
                                a.btn.btn-success(href='/universe/user?email=' + user.email, style='margin-top:1px') #{user.email}


        body
            block content
